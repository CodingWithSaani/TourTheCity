<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:id="@+id/MainRL"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/city"
        android:scaleType="centerCrop"
        android:id="@+id/cityIV"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cityIV"
        android:id="@+id/cityNameTV"
        android:text="@string/superior_city"
        android:gravity="center"
        android:textSize="15sp"
        android:padding="10dp"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:onClick="moveToHospital"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/innerRLOne"
        android:layout_below="@id/cityNameTV"

        >
        <RelativeLayout
            android:id="@+id/optionRLOne"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/border"
            >

            <ImageView
                android:id="@+id/optionOneIV"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_hospital" />

            <View
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark"
                android:layout_below="@id/optionOneIV"
                android:id="@+id/borderViewOne"
                />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Hospitals"
                android:gravity="center"
                android:layout_below="@id/borderViewOne"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_toRightOf="@id/optionRLOne"
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/border"
            >
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/optionTwoIV"
                android:src="@drawable/ic_school"
                />

            <View
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark"
                android:layout_below="@id/optionTwoIV"
                android:id="@+id/borderViewTwo"
                />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Schools"
                android:gravity="center"
                android:layout_below="@id/borderViewTwo"
                />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/innerRLTwo"
        android:layout_below="@id/innerRLOne"

        >
        <RelativeLayout
            android:id="@+id/optionRLThree"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/border"
            >
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/optionThreeIV"
                android:src="@drawable/ic_shopping"
                />

            <View
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark"
                android:layout_below="@id/optionThreeIV"
                android:id="@+id/borderViewThree"
                />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Shopping"
                android:gravity="center"
                android:layout_below="@id/borderViewThree"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_toRightOf="@id/optionRLThree"
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/border"
            >
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/optionFourIV"
                android:src="@drawable/ic_airplane"
                />

            <View
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark"
                android:layout_below="@id/optionFourIV"
                android:id="@+id/borderViewFour"
                />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Airports"
                android:gravity="center"
                android:layout_below="@id/borderViewFour"
                />

        </RelativeLayout>

    </RelativeLayout>




</RelativeLayout>